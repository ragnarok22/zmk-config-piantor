#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    chosen { zmk,physical-layout = &default_layout; };
};

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "QWERTY";

            // --------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |  Y  |  U   |  I  |  O  |  P  | BSPC |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC | ENT | RSE  | ALT |

            bindings = <
&none  &kp Q  &kp W  &kp E  &kp R  &kp T  &kp Y  &kp U  &kp I  &kp O  &kp P  &none  &none  &kp A  &mt LEFT_SHIFT S  &mt LEFT_CONTROL D  &mt RIGHT_ALT F  &kp G  &kp H  &mt LEFT_ALT J  &mt RIGHT_CONTROL K  &mt RIGHT_SHIFT L  &kp SINGLE_QUOTE  &none  &none  &kp Z  &kp X  &kp C  &kp V  &kp B  &kp N  &kp M  &kp COMMA  &kp DOT  &kp FSLH  &none  &kp ESCAPE  &mt LEFT_GUI ESCAPE  &lt 3 BACKSPACE  &lt 1 SPACE  &lt 2 ENTER  &none
            >;
        };

        number_layer {
            display-name = "NUMBER";

            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5    |  6  |  7  |  8  |  9  |  0  | BSPC |
            // | CTRL | BT1 | BT2 | BT3 | BT4 | BT5   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT | BTCR| RGB | RST | BOOT| Unlock|     |     |     |     |     |      |
            //                    | GUI |     | SPC   | ENT |     | ALT |

            bindings = <
&none  &kp PLUS  &kp N1  &kp N2  &kp N3  &kp MINUS  &kp PRINTSCREEN  &kp F1  &kp F2  &kp F3  &kp F10  &none  &none  &kp STAR  &kp N4  &kp N5  &kp N6  &kp FSLH  &kp DELETE  &kp F4  &kp F5  &kp F6  &kp F11  &none  &none  &kp EQUAL  &kp N7  &kp N8  &kp N9  &kp N0  &trans  &kp F7  &kp F8  &kp F9  &kp F12  &none  &trans  &mt LEFT_GUI SEMICOLON  &lt 4 TAB  &trans  &trans  &trans
            >;
        };

        symbol_layer {
            display-name = "SYMBOL";

            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |  ^  |  &  |  *  |  (  |  )  | BSPC |
            // | CTRL |     |     |     |     |     |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC | ENT |     | ALT |

            bindings = <
&none  &kp BACKSLASH  &mt LEFT_SHIFT LEFT_BRACKET  &mt LEFT_SHIFT RIGHT_BRACKET  &kp SEMI  &trans  &trans  &trans  &trans  &trans  &trans  &none  &none  &trans  &mt LEFT_SHIFT LEFT_PARENTHESIS  &mt LEFT_SHIFT RIGHT_PARENTHESIS  &kp BACKSLASH  &trans  &trans  &kp LEFT  &kp DOWN  &mt RIGHT_SHIFT UP_ARROW  &kp RIGHT  &none  &none  &trans  &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &none  &trans  &kp LEFT_GUI  &trans  &trans  &trans  &trans
            >;
        };

        media_layer {
            display-name = "media";
            bindings = <
&none  &trans  &trans  &trans  &kp C_BRIGHTNESS_INC  &kp C_AC_HOME  &kp K_MUTE  &kp C_VOLUME_UP  &kp PAGE_UP  &trans  &trans  &none  &none  &trans  &kp C_AL_MAIL  &trans  &kp C_AL_CALCULATOR  &kp DELETE  &kp INSERT  &kp K_PREV  &kp K_PLAY_PAUSE  &kp K_NEXT  &trans  &none  &none  &trans  &trans  &trans  &kp C_BRIGHTNESS_DEC  &kp C_AC_SEND  &trans  &kp C_VOLUME_DOWN  &kp PAGE_DOWN  &trans  &trans  &none  &trans  &trans  &trans  &trans  &trans  &trans
            >;
        };

        extra_layer_2 {
            display-name = "EXTRA 2";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
            >;
        };

        bluetooth_layer {
            display-name = "bluetooth";
            bindings = <
&none  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &none  &none  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4  &trans  &trans  &trans  &trans  &trans  &none  &none  &bt BT_CLR  &trans  &sys_reset  &bootloader  &studio_unlock  &trans  &trans  &trans  &trans  &trans  &none  &trans  &trans  &trans  &trans  &trans  &trans
            >;
        };
    };
};
